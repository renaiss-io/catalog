where(@cw_aws_east; @cw_aws_west)
.what(
    "MetricName='NetworkOut';InstanceId='*'; Namespace='AWS/EC2'" ;
    "MetricName='NetworkIn';InstanceId='*'; Namespace='AWS/EC2'"
)
.when(24h)
.window(15m)

.request($where[0];$what[0];$when[0];$window[0]).as($ts_net_out)
.request($where[1];$what[1];$when[0];$window[0]).as($ts_net_in)

.merge($ts_net_out;average).as($total_net_out)

.chart($total_net_out;$ts_net_in;@linestack)